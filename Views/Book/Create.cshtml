@model librarySampleMVC.Models.Dto.BookDto

@{
    ViewData["Title"] = "newBookView";
}


<div class="row" style="margin:auto;margin-top:20px;">

    <div class="col-md-10">
        <div class="col-md-6" style="float:right;">
            <h5 class="display-8">کتابفروشی آنلاین</h5>
        </div>
        <div class="col-md-6" style="float:right;">
            <a asp-action="Index">برگشت به صفحه اصلی</a>
        </div>
    </div>
    <hr />
    <div class="col-md-10">
        <form asp-action="newBookView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4" style="float:right;">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="groupId" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <select asp-for="groupId" asp-items="@Model.groupLst" style="width:100%;height:35px !important;">
                        <option>یک گزینه انتخاب شود</option>
                    </select>
                    <span asp-validation-for="groupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="publisherId" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <select asp-for="publisherId" asp-items="@Model.publisherLst" style="width:100%;height:35px !important;">
                        <option>یک گزینه انتخاب شود</option>
                    </select>
                    <span asp-validation-for="publisherId" class="text-danger" />
                </div>
            </div>
            <div class="col-md-4" style="float:right;height:50px !important"></div>
            <div class="col-md-4" style="float:right;">
                <div class="form-group">
                    <label asp-for="Shabak" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Shabak" class="form-control" />
                    <span asp-validation-for="Shabak" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublisherDate" class="control-label"></label>
                    <input asp-for="PublisherDate" class="form-control" />
                    <span asp-validation-for="PublisherDate" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" asp-action="SaveBook" value="افزودن کتاب" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
